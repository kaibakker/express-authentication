<% include ../partials/head %>

  <body>
    <div class="ui vertical masthead">
      <div class="ui container">
        <div class="ui large secondary menu segment">

          <a class="header item" href="/">EnterSlack</a>

          <a class="item" href="/integration">Integration</a>

          <div class="right item">
            <a class="ui button" href="/login">Log in</a>
            &nbsp;
            <a class="ui button" href="/signup">Sign Up</a>
          </div>
        </div>
      </div>
    </div>

    <div class="ui stripe theming vertical segment">
      <div class="ui stackable very relaxed grid container">
        <div class="left aligned column">
          <div class="ui grid">
            <div class="sixteen wide column"><h1 class="ui header">
              Integrate Enterslack
            </h1>
            <p>
              Integration is quick and easy, choose an integration, copy the HTML and paste it into your website.
            </p>
          </div>
            <% for(var i=0; i<integrations.length; i++) { %>
              <div class="four wide column"><%= integrations[i].title %></div>
              <div class="four wide column"><%- integrations[i].html %></div>
              <div class="eight wide column"><pre><code class="html"><%= integrations[i].html %></code></pre></div>
            <% } %>
          </div>
        </div>
      </div>
    </div>
    </div>
  </body>
</html>
